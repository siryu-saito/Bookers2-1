<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/side', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@books.user_id) do %><%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg'%>
            <label><%= @books.user.name %></label>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books.id) %></td>
          <td><%= @books.body %></td>
          <% if @books.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@books.id), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@books.id), method: :delete, class:"btn btn-danger", "data-confirm" => "Are you sure to delete this book?" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>