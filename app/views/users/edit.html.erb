<div class="container">
  
  <p class="text-danger">
    <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </p>

  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="field mb-3">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="field mb-3">
        <label>Image</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
        <%= f.attachment_field :profile_image, placeholder: 'プロフィール画像' %>
      </div>
      <div class="field md-3">
        <label>Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      
      <%= f.submit 'Update User', class:"btn btn-success" %>
      <% end %>
      
    </div>
  </div>
</div>