<div class="container">
  <div class="row">

    <div class="col-md-3">
    <%= render 'books/side', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <th><%= link_to user_path(@user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %><% end %></th>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>